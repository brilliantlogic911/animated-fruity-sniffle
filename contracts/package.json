{
  "name": "staticfruit-contracts",
  "version": "1.0.0",
  "description": "StaticFruit smart contracts for Base network",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:live": "hardhat test test/live --network base",
    "test:fork": "cross-env FORK_MAINNET=1 hardhat test test/fork",
    "coverage": "hardhat coverage",
    "gas-report": "cross-env GAS_REPORT=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "verify": "hardhat verify",
    "generate-verification-json": "hardhat run scripts/generate-verification-json.ts",
    "extract-verification-json": "ts-node scripts/extract-verification-json.ts",
    "create-verification-json": "ts-node scripts/create-verification-json.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@typechain/hardhat": "^9.0.0",
    "hardhat": "^2.19.0",
    "typechain": "^8.3.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.8"
  },
  "dependencies": {
    "viem": "^2.37.6"
  }
}
